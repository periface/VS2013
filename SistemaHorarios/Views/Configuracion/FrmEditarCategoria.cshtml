@model SERVICIOS.Models.MCategoria
@{
    ViewBag.Title = "Edición de Categorias";
    Layout = null;
}
@using (Ajax.BeginForm("FrmEditarCategoria", new AjaxOptions { UpdateTargetId="frm",InsertionMode = InsertionMode.Replace,HttpMethod = "Post" }))
{
    <div id="frm" class="row">
        <div class="col-lg-12">
            <h3>Editar Categoria</h3>
            <div class="form-group">
                @Html.HiddenFor(a => a.idCategoria)
                <label class="control-label">Nombre de categoria</label>
                @Html.TextBoxFor(a => a.nomCategoria, new { @class = "form-control" })
                @Html.ValidationMessageFor(a=>a.nomCategoria)
            </div>
            <div class="form-group">
                <label class="control-label">Hora de entrada asignada</label>
                @Html.TextBoxFor(a => a.hraEntAsignada, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.hraEntAsignada)
            </div>
            <div class="form-group">
                <label class="control-label">Hora de salida asignada</label>
                @Html.TextBoxFor(a => a.hraSalAsignada, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.hraSalAsignada)
            </div>
            <input type="submit" class="btn btn-primary" value="Guardar cambios" />
        </div>
    </div>
}

