@model SERVICIOS.Models.MPermiso
           @using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "AgendarPermiso";
    Layout = null;
}
<link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
@using (Ajax.BeginForm("AgendarPermiso", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "form" }))
{
    
    <div id="form" class="row">
        <div class="col-lg-6">
            <h2>Agendar Permiso</h2>
            <p>Firma Electronica : @User.Identity.GetUserId()</p>
            <div class="form-group">
                <label class="control-label">Motivo del Permiso</label>
                @Html.TextAreaFor(a => a.motivoPermiso, new { @class = "form-control", autofocus = "true" })
            </div>
            <div class="form-group">
                <label class="control-label">Salida</label>
                @Html.TextBoxFor(a => a.horaSalida, new { @class = "form-control fecha" })
            </div>
            <div class="form-group">
                <label class="control-label">Observaciones</label>
                @Html.TextAreaFor(a => a.observaciones, new { @class = "form-control" })
            </div>
            <input type="submit" class="btn btn-primary" value="Agendar Permiso" /><br />

        </div>
        <div class="col-lg-6">
            <h2>Atención..</h2>
            <p class="text-warning">Revise bien sus datos.</p>
            <p class="text-warning">Los permisos cuentan con una firma electronica, esto los hace unicos para cada usuario.</p>
            <p class="text-danger">Una ves agendado el permiso no podran deshacerse los cambios.</p>
            <p class="text-danger">Las horas entre salida y llegada tienen un impacto negativo en el rendimiento del empleado.</p>
            <h3>Mensajes</h3>
            @Html.ValidationSummary()
        </div>
    </div>
}
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
<script src="~/Scripts/moment-with-locales.min.js"></script>
<script>
    $(function () {
        $(".fecha").datetimepicker({
            locale: "es",
            widgetPositioning: {
                horizontal: 'right',
                vertical:'bottom'
            }
        });
    })
</script>
