@model SERVICIOS.Models.MEmpleado
@{
    ViewBag.Title = "CapturarDatos";
    Layout = null;
}
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col-lg-6">
                    @{bool deshabilitado = false; if (Model != null) { deshabilitado = true; }}
                    <div class="form-group">
                        <label class="control-label">
                            Numero de Empleado
                        </label>
                        @if (deshabilitado)
                        {
                            @Html.HiddenFor(a => a.noEmpleado)
                            @Html.TextBoxFor(a => a.noEmpleado, new { @class = "form-control", disabled = "disabled" })
                        }
                        else
                        {
                            @Html.TextBoxFor(a => a.noEmpleado, new { @class = "form-control" })
                        }
                    </div>
                    <div class="form-group">
                        <label class="control-label">
                            Nombre
                        </label>
                        @Html.TextBoxFor(a => a.nomEmpleado, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">
                            Apellido Paterno
                        </label>
                        @Html.TextBoxFor(a => a.patEmpleado, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">
                            Apellido Materno
                        </label>
                        @Html.TextBoxFor(a => a.matEmpleado, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">
                            Horas Asignadas
                        </label>
                        @Html.TextBoxFor(a => a.noHorasAginadas, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">
                            Tipo de Empleado
                        </label>
                        @if (deshabilitado)
                        {
                            @Html.DropDownList("tipoEmpleado", (IEnumerable<SelectListItem>)ViewBag.tipos, new { @class = "form-control", disabled = "disabled" })
                    
                        }
                        else {
                            @Html.DropDownList("tipoEmpleado", (IEnumerable<SelectListItem>)ViewBag.tipos, new { @class = "form-control" })
                    
                        }
                    </div>
                    <button type="submit" class="btn btn-success">Guardar Datos</button>

                </div>
                <div class="col-lg-6">
                    @Html.ValidationSummary()

                </div>
            </div>

        }
    </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
