<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="fb-share-button" data-href="Web Site Url" data-layout="button"></div> <!--This is the actual facebook share button-->
    <div class="container">
        <div class="row">
                <div class="navbar navbar-inverse navbar-default">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            @Html.ActionLink("Sistema de Horarios", "Index", "PanelControl", null, new { @class = "navbar-brand" })
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Panel de Control", "Index", "PanelControl")</li>
                                <li>@Html.ActionLink("Configuración", "Index", "Configuracion")</li>
                            </ul>
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>
        </div>
        
    </div>
    
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>Cinotam</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/Notify/bootstrap-notify.min.js"></script>
    <script src="~/Scripts/Sitio/_Layout.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
